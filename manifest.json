{
  "manifest_version": 3,
  "name": "Arc",
  "version": "1.0.0",
  "description": "Command palette for tabs and bookmarks",
  "permissions": ["bookmarks", "tabs", "activeTab", "scripting", "favicon", "storage", "identity"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle Arc palette"
    },
    "quick-switch": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Ctrl+Q"
      },
      "description": "Quick switch between recent tabs"
    },
    "profile-switch": {
      "suggested_key": {
        "default": "Ctrl+P",
        "mac": "Ctrl+P"
      },
      "description": "Quick switch between Chrome profiles"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
