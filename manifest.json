{
  "manifest_version": 3,
  "name": "FlashMark",
  "version": "1.0.0",
  "description": "Command palette for tabs and bookmarks",
  "permissions": ["bookmarks", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle FlashMark palette"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
